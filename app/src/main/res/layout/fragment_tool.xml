<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="chsj.chanyouji.fragments.tools.ToolFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="#EBF0F5"
        >
        <TextView
            android:id="@+id/tool_fragment_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textSize="25sp"
            android:drawableRight="@mipmap/wiki_hostory_arrow_right"
            android:drawablePadding="15dp"
            android:text="北京"
            />
'
        <RelativeLayout
            android:id="@+id/tool_fragment_city_temperature"
            android:layout_below="@id/tool_fragment_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            >
            <TextView
                android:id="@+id/tool_fragment_line"
                android:layout_width="25dp"
                android:layout_height="2dp"
                android:background="#CCCCCC"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tool_min_temperature"
                android:layout_toLeftOf="@id/tool_fragment_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#37ABDC"
                android:textSize="40sp"
                android:text="--"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:id="@+id/tool_max_temperature"
                android:layout_toRightOf="@id/tool_fragment_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF3D32"
                android:textSize="40sp"
                android:text="--"
                android:layout_marginLeft="5dp"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/current_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tool_fragment_city_temperature"
            android:text="当前时间:--:--,周一"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/tool_fragment_radiobtn1"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp"
            >
            <RadioButton
                android:id="@+id/tool_fragment_translation"
                style="@style/ToolThemeRadioButton"
                android:drawableTop="@drawable/tools_translation_selector"
                android:text="语音翻译"
                />
            <RadioButton
                android:id="@+id/tool_fragment_account"
                style="@style/ToolThemeRadioButton"
                android:drawableTop="@drawable/tools_account_selector"
                android:text="旅行记账"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp"
            >
            <RadioButton
                android:id="@+id/tool_fragment_map"
                style="@style/ToolThemeRadioButton"
                android:drawableTop="@drawable/tools_map_selector"
                android:text="旅行地图"
                />
            <RadioButton
                android:id="@+id/tool_fragment_exchange"
                style="@style/ToolThemeRadioButton"
                android:drawableTop="@drawable/tools_exchange_selector"
                android:text="实时汇率"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
